<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/ic_back_pic"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Вход"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/first_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/second_textView"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="46dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/first_textView"
        app:layout_constraintStart_toStartOf="@id/first_textView"
        app:layout_constraintTop_toTopOf="@id/first_textView"
        android:text="Выполните вход\nили зарегистрируйтесь"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/first_editText"
            android:paddingStart="24dp"
            android:height="50dp"
            android:layout_marginHorizontal="26dp"
            android:background="@drawable/edit_text_background"
            android:hint="Введите вашу почту"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/second_editText"
            android:paddingStart="24dp"
            android:height="50dp"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="26dp"
            android:background="@drawable/edit_text_background"
            android:hint="Введите пароль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:height="60dp"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="26dp"
            android:textSize="18dp"
            android:text="Войти"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:textSize="16dp"
        android:layout_marginBottom="66dp"
        android:layout_marginStart="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="Забыли пароль?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text2"
        android:textSize="16dp"
        android:layout_marginBottom="66dp"
        android:layout_marginStart="198dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/brown"
        android:text="Кликни сюда"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>


